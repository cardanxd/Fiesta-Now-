<head>
    <link rel="stylesheet" href="/css/AcademiasAll.css">
</head>

{{> navStudent}}

<div class="content mt-5">
    <div class="container">
        <a href="#panel" class="btn-flotante">Inicio</a>
        <div class="card">
            <div class="row mt-4">
                <div class="search mx-auto">
                    <input onkeyup="SearchTargets()" type="text" class="searchTerm" id="Search"
                        placeholder="Escribe el nombre de la clase">
                    <button type="button" class="searchButton">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="row mt-5">
                {{#each clases}}
                <div class="col-lg-4" name="Target">
                    <div class="text-center card-box1">
                        <div class="member-card pt-2 pb-2">
                            <div class="col">
                                <h4 class="mr-4">{{clase.nombre}}</h4>
                            </div>
                             <h6 class="mt-4">Fecha de suscripción</h6>
                            <div class="col">
                                <p class="card-text mr-4">{{suscripcion.inicio}}</p>
                            </div>
                            <h6 class="mt-4">Vencimiento de suscripción</h6>
                            <div class="col">
                                <p class="card-text mr-4">{{suscripcion.vencimiento}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
        <!-- container -->
    </div>
    <script src="/js/Panel.js"></script>
</div>